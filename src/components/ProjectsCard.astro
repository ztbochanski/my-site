---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
import { Icon } from "astro-icon/components";
const projects = [
  {
    name: "Dashboard",
    link: "https://flight-review.netlify.app/",
  },
  {
    name: "Model",
    link: "https://flight-review.netlify.app/",
  },
  {
    name: "API",
    link: "https://flight-review.netlify.app/",
  },
  {
    name: "Database",
    link: "https://flight-review.netlify.app/",
  },
  {
    name: "Documentation",
    link: "https://flight-review.netlify.app/",
  },
];
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <header class="flex items-center">
    <div class="flex items-center justify-center">
      <h1 class="text-xl font-semibold">Projects</h1>
      <div class="p-1 m-1">
        <Pulse />
      </div>
    </div>
  </header>
  <section class="mt-2">
    <div class="flex flex-col w-fit h-full">
      <ul class="list-none font-light">
        {
          projects.map((project) => (
            <li>
              <a
                class="mb-2 flex link link-hover"
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="mr-2 mt-1">
                  <Icon name="noto:link" class="w-4 h-4" />
                </span>
                {project.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Card>
