    <ul class="font-light list-none">
      <li class="mb-2 flex gap-2">
        <Icon name="noto:snowflake" class="w-6 h-6" />
        <Icon name="noto:snow-capped-mountain" class="w-6 h-6" />
        <Icon name="noto:small-airplane" class="w-6 h-6" />
        <Icon name="noto:factory-worker" class="w-6 h-6" />
