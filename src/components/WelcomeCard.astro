---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../consts";
import { Icon } from "astro-icon/components";
const currentYear = new Date().getFullYear();
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="text-sm font-light m-0">welcome</h6>
        <p class="m-0 font-light text-xl">
          Hi, I'm <b class="font-bold">Zach</b>, a software engineer. I am
          passionate about crafting impactful data stories, mastering proven
          design patterns, and creating visually appealing designs. My
          professional interests encompass systems programming and data science.
        </p>
      </div>
      <div class="flex gap-4">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <Icon name="ri:github-line" class="h-6" />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a href={LINKS.linkedin} aria-label="linkeding profile" target="_blank">
          <Button aria-label="linkedin profile">
            <Icon name="ri:linkedin-box-line" class="h-6" />
            <span class="sr-only">Linkedin Profile</span>
          </Button>
        </a>
        <a href={LINKS.discord} aria-label="discord" target="_blank">
          <Button aria-label="discord">
            <Icon name="ri:discord-line" class="h-6" />
            <span class="sr-only">Discord</span>
          </Button>
        </a>
      </div>
    </div>
    <img
      width="300"
      height="300"
      src="/avatar-frame-close.png"
      class="w-auto max-h-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-85 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
      alt="avatar of zach"
    />
  </div>
  <div class="flex items-end justify-end">
    <p class="text-xs inline-flex">
      © {currentYear} · Crafted with <Icon
        name="ri:heart-fill"
        class="h-4 text-error ml-1"
      />
      <span class="sr-only">Love</span>
    </p>
  </div>
</Card>
