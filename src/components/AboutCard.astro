---
import Card from "./Card/index.astro";
import { LINKS } from "../consts";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4" title="About 👨‍🔧">
  <div class="h-full">
    <section class="mt-4">
      <h2 class="text-sm font-light">favorite languages</h2>
      <div class="grid grid-cols-2 gap-4">
        <ul class="text-sm font-light">
          <li>Rust</li>
        </ul>
        <ul class="text-sm font-light">
          <li>
            <a href={LINKS.rickroll} target="_blank" class="text-info">x86</a>
          </li>
        </ul>
      </div>
    </section>

    <section class="mt-4">
      <div class="flex flex-col">
        <h2 class="text-sm font-light">interests</h2>
        <p class="text-xl font-light">🖤❄️👨‍🏭✈️</p>
        <p class="text-sm font-light mt-2">
          English (Fluent) · Norwegian (B2) 🇳🇴
        </p>
      </div>
    </section>
  </div>
</Card>
